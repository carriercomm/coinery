source 'https://rubygems.org'

gem 'rails', '4.0.2'
gem 'rails-api'
gem 'pg'
gem 'jbuilder', '~> 1.2'
gem 'thin'

# Auth
gem 'omniauth-twitter'
gem  'oauth2'

# File Handling
gem 'paperclip'
gem 'aws-sdk'

gem 'figaro'

# API Docs
gem 'apipie-rails'

# Coinbase
gem 'coinbase'


group :doc do
  gem 'sdoc', require: false
end

group :development do 
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :development, :test do 
  gem 'rspec-rails'
  gem 'database_cleaner'
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-bundler'
  gem 'pry'
end



